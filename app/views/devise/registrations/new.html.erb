<div class="signup-form-horizon">
  <div class="signup-form-container">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <%= image_tag("branding.png", :class => 'branding') %>
      <div class="login-form small-12 columns centered">

      <div class="field">
        <%= f.email_field :email, autofocus: true, placeholder: 'you@example.com' %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "off", placeholder: (t('password')) + ' (min length ' + @minimum_password_length.to_s + ' characters)' %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: (t('confirm_password')) %>
      </div>

      <div class="actions clearfix">
        <%= f.submit (t('sign_up')), :class => 'button small-12 columns'%>
      </div>

              <% if devise_mapping.rememberable? -%>
          <div class="login-form-remember field clearfix">            
            <%= f.label :remember_me, (t('remember_me')), class: 'login-form-remember-label' %>
            <%= f.check_box :remember_me, class: 'login-form-remember-checkbox'  %>          
          <div class="language-selection">
            <% if I18n.locale != :en %>
              <%= link_to "EN", locale: 'en' %>
            <% end %>
            <% if I18n.locale == :en %>
              <%= link_to "中文", locale: 'zh-CN'  %>
            <% end %>
          </div>
        </div>
        <% end -%>
      <%= render 'devise/shared/links' %>
      </div>      
    <% end %>
  </div>
</div>