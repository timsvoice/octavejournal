<%= image_tag("landing-page.jpg", class: 'landing') %></div>
  <div class="login-form-horizon">
    <div class="login-form-container">
      <%= image_tag("branding.png", :class => 'branding') %>
      <div class="login-form small-12 columns centered">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.email_field :email, autofocus: true, placeholder: 'you@example.com' %>
          </div>

          <div class="field">
            <%= f.password_field :password, autocomplete: "off", placeholder: (t('password')) %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="login-form-remember field clearfix">            
              <%= f.label :remember_me, (t('remember_me')), class: 'login-form-remember-label' %>
              <%= f.check_box :remember_me, class: 'login-form-remember-checkbox'  %>          
            <div class="language-selection">
              <% if I18n.locale != :en %>
                <%= link_to "EN", locale: 'en' %>
              <% end %>
              <% if I18n.locale == :en %>
                <%= link_to "中文", locale: 'zh-CN'  %>
              <% end %>
            </div>
          </div>
          <% end -%>

          <div class="actions clearfix">
            <%= f.submit (t('login')), :class => 'button small-12 columns' %>
          </div>

          <%= render 'devise/shared/links' %>
        <% end %>        
      </div>    
    </div>
  </div>
