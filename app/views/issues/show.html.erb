<div class="clearfix">       
  <div class="large-12 columns alpha beta"> 
  <div class="container">
    <div class="post-intro  clearfix"> 
      <div class="post row">    
        <div class="post-image small-12 columns alpha beta">
        <%= image_tag @issue.issue_feature_url.to_s, class: "lazy post-image" %>
        </div>
      </div>
    </div>
    <div class="row post-content">
      <div class="post-body small-12 medium-7 large-7 medium-offset-1 large-offset-0 columns alpha beta right">      
      <div class="show-for-small-only">
        <h1 class="post-title"><%= @issue.title %></h1>        
      </div>
      <%= raw(@issue.introduction) %>
      </div>
      <div class="post-related medium-4 left beta alpha">
        <div class="show-for-medium-up">
          <h1 class="post-title"><%= @issue.title %></h1>        
          <div class="post-actions">
            <% if current_user.role_id >= 2 %>
              <%= link_to (t('edit')), edit_issue_path(@issue), :class => 'small button edit' %>
            <% end %>
            <% if current_user.role_id >= 3 %>
              <%= link_to (t('delete')), @issue, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'small button alert' %>
            <% end %>
          </div>
          <ul class="post-related-list small-12 medium-8 columns alpha">
            <% Issue.find(params[:id]).articles.each do |article| %>
            <%= link_to(article) do %>
            <li class="post-related-list-item">
              <%= image_tag article.article_feature_url.to_s %> 
              <h4 class="post-related-list-item-title">
                <%= article.title%>             
              </h4>
            </li>
            <% end %>
            </a>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div> 
  </div>
</div>
