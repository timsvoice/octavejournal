<%= form_for(@issue) do |f| %>

<%= render :partial => 'layouts/issue.navigation', :locals => { :f => f} %>

<div class="clearfix"> 
  
  <% if @issue.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@issue.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% @issue.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>  

  <div class="large-12 columns alpha beta"> 

    <div class="container">
    
    

      <% if @issue.issue_feature_url.to_s.length > 0 %>
      
        <div class="post-intro  clearfix">       
          <div class="post row">    
            <div class="post-image small-12 columns alpha beta">
            <%= image_tag @issue.issue_feature_url.to_s, class: "lazy post-image", id: "issue_issue_feature" %>
            </div>
          </div>
        </div>        
        
        <div class="post row"> 
          <h4 class="post-image-upload"><%= (t('upload_image')) %></h4>
          <%= f.file_field :issue_feature %>
        </div>

      <% end %>


        <% if @issue.issue_feature_url.to_s.length == 0 %>
                  
          <div class="post row"> 
            <h4 class="post-image-upload"><%= (t('upload_image')) %></h4>
            <%= f.file_field :issue_feature %>
          </div>

        <% end %>

        <div class="row post-content">
        <div class="post-body small-12 medium-7 large-6 medium-offset-1 large-offset-0 columns alpha beta right">
          
          <div class="show-for-small-only">
            <%= f.text_field :title, class: "post-title-input", placeholder: "Issue Title" %>
            <%= f.text_field :summary, class: "post-teaser-input", placeholder: "Issue Teaser" %>
            <div class="post-meta small-12 columns">
              <h4>Article Meta Data</h4>
              <select name="Issue" id="issue-select" class="small-12 medium-3 columns left">
                <option value="" default selected>Issue</option>
              </select>
              <select name="Category" id="category-select" class="small-12 medium-3 columns left">
                <option value="" default selected>Category</option>
              </select>
              <div class="small-12 medium-4 left">          
                <input type="text" placeholder="tag1, tag2, tag3" ng-model="newIssue.tags" name="tags" class="post-tags-input">
              </div>
            </div>
          </div>
          
          <%= f.cktext_area :introduction, rows: 60, class: "post-content-input", placeholder: "Issue introduction" %>

          <div class="post-buttons small-12 columns beta">
            <%= f.submit (t('save')), class: 'button small' %>
          </div>        

        </div>
        <div class="post-related medium-4 left beta alpha">
          <div class="show-for-medium-up" id="addarticle">
            <%= f.text_area :title, rows: 20, class: "post-title-input", placeholder: (t('title')) %>
            <%= f.text_area :summary, rows: 8, class: "post-teaser-input", placeholder: (t('summary')) %>
          
          </div>
        </div>
        </div>

     <% end %>
    
    </div> 

  </div>

</div>